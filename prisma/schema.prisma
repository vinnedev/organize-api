generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model products {
  id           String   @id @default(uuid())
  barCode      String?
  shortName    String   @db.String(20)
  name         String
  image        String?
  cost         Float
  price        Float
  profitMargin Int
  stock        Int      @default(0)
  minStock     Int      @default(0)
  maxStock     Int      @default(0)
  status       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model users {
  id        String   @id @default(uuid())
  name      String
  password  String
  mail      String
  image     String?
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String
  contacts  contacts[] 
  anddress  anddress[]
}

//adição
model contacts {
  id          String @id @default(uuid())
  email       String @unique 
  phoneNumber String  
  supplier    suppliers? @relation(fields: [supplierId], references: [id])
  supplierId String
  user users? @relation(fields: [userId], references: [id])
  userId String

}

model suppliers {
  id String @id @default(uuid())
  taxnumber String
  corporateName String
  tradeName String
  contacts contacts[]
  anddress  anddress[]
}

model anddress {
    id String @id @default(uuid())
    zipCode String
    street String
    neighborhood String
    city String
    state String
    number Int
    type Boolean
    user users? @relation(fields: [userId], references: [id])
    userId String
    supplier suppliers? @relation(fields: [suppliersId], references: [id])
    suppliersId String
}